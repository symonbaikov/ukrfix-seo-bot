def is_posted(country, city, category):
    conn = sqlite3.connect('history.db')
    c = conn.cursor()
    c.execute("SELECT * FROM posted WHERE country=? AND city=? AND category=?",
              (country, city, category))
    data = c.fetchone()
    conn.close()
    return data is not None

def mark_posted(country, city, category):
    conn = sqlite3.connect('history.db')
    c = conn.cursor()
    c.execute("INSERT INTO posted VALUES (?, ?, ?)", (country, city, category))
    conn.commit()
